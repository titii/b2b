.top
  min-width 320px

ul
  list-style none
.lighter-blue
  background-color $color--lighter-blue

.light-blue
  background-color $color--light-blue

.deactivate
  background-color #000000
  opacity 0.63

.section
  position relative
  height 160px

  img
    width 100%
    height 100%

  .logo
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 148px
    height 74px
    z-index 2000

.menu
  .item
    .updated
      position absolute
      top 0
      right 0
