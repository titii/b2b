.page--links
  .section__description
    margin-bottom 24px

.links__list
  background-color $color--lighter-blue

  .links__item
    position relative
    border-bottom 1px solid #979797
    padding 13px 40px 13px 20px

    .description
      margin-bottom 0
      font-size 12px

    .title-icon
      display inline-block
      width 28px
      height 28px
      margin-top -5px
      background-image url('../img/links/icon_airplane.png')
      background-size contain
      vertical-align middle

    .title
      display inline-block
      margin-left 8px
      color #e53935
      vertical-align middle
      font-size 14px

    .links__arrow
      position absolute
      top 50%
      right 8px
      transform translateY(-50%)
