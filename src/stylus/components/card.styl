$el-margin = 20px

.page

  &__philosophy
    .copy-right
      padding-top 24px

  &--ongoing
    .section__description
      margin-bottom 20px

.description
  margin-bottom 20px
  color #444444
  font-size 14px
  line-height 26px

.section__description
  margin-bottom 0
  padding 20px 20px 30px
  background-color $color--lighter-blue
  box-shadow 0px 0px 4px 0px rgba(0,0,0,0.12), 0px 4px 4px 0px rgba(0,0,0,0.24)

.section__title
  display inline-block
  width 135px
  padding 13px 20px 6px
  border-bottom 4px solid #E53935
  font-family 'Roboto'
  font-size 20px
  box-sizing border-box

.card
  margin-bottom 25px
  padding 25px 0 0
  background-color $color--lighter-blue
  box-shadow 0px 0px 4px 0px rgba(0,0,0,0.12), 0px 4px 4px 0px rgba(0,0,0,0.24)

  &:last-of-type
    margin-bottom 0

  &__container
    padding 0 20px

  &__container.full
    padding 0

  .name
    margin-bottom 5px
    font-size 20px
    text-align center

  .date
    margin-bottom 10px
    color #404040
    font-size 12px
    text-align center

  .image
    position relative
    margin-bottom 15px

    img
      display block
      margin 0 auto

    .contact
      position absolute
      bottom 0
      left 0
      color #E53935

  .detail-info
    position relative
    display table
    width 100%
    margin-bottom 20px
    padding 10px 0
    border-top 1px solid #979797
    border-bottom 1px solid #979797

    &__column
      display table-cell
      width: 50%
      border-right 1px solid #979797
      text-align center

    &__column:last-child
      border-right none

    &__title
      margin-bottom 14px
      color #404040
      font-size 16px

    &__body
      margin-bottom 14px
      font-size 20px

  .contact-button
    position relative
    display block
    padding 20px 0
    border-top 1px solid #979797
    color #E53935
    font-size 17px
    text-align center

    .links__arrow
      position absolute
      top 50%
      right 0
      transform translateY(-50%)

  .title--small
    margin 5px 8px 12px
    font-size 12px
    text-align left

  .sns-buttons
    list-style none
    position relative
    display flex
    justify-content space-between
    padding-bottom 20px

.page--contact
  .card
    .sns-buttons
      padding-bottom 26px

.page--article
  .card
    .date
      color #404040
      text-align left

    .title__article
      margin-bottom 10px
      color #404040
      font-size 16px

    .sns-buttons
        padding-top 20px
        border-top 1px solid #979797

    .links__arrow
      right 100%
      left 16px
      transform translateY(-50%) rotate(180deg)

.movie
  position relative
  width 100%

  &:before
    content ""
    display block
    padding-top 56.25%

  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
